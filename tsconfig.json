{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "lib": ["ES2017", "ES6"],
        "outDir": "./dist",
        "target": "ES5",
        "preserveConstEnums": true,
        "sourceMap": true,
        "moduleResolution": "node"
    },
    "typedocOptions": {
        "mode": "modules",
        "out": "docs"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "dist"]
}